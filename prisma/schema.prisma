generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model recibo {
  id           String   @id @default(uuid())
  name         String
  doc          String
  description  String[]
  amount       Float[]
  total_amount Float
  issuer       String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  number       Int
}

model empresas {
  id                     String @id @default(uuid())
  bairro                 String
  cep                    String
  cnaePrincipalCodigo    String
  cnaePrincipalDescricao String
  cnpj                   String @unique
  complemento            String
  ddd                    String
  email                  String
  logradouro             String
  municipio              String
  nomeFantasia           String
  numero                 String
  razaoSocial            String
  status                 String
  telefone               String
  tipoLogradouro         String
  uf                     String
  dataAbertura           String
}

model pessoas {
  id             String @id @default(uuid())
  nome           String
  cpf            String
  dataNascimento String
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  cpf       String   @unique
  isAdmin   Boolean  @default(false) @map("is_admin")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("user")
}
